.util{
  width: 100%;
  height: 70px;
  background-color: rgb(153, 182, 211);
}
.root{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center; 
  width: 100%;
  height: 1295rpx;
  background-color:rgb(153, 182, 211);
}
.navi{
  position: fixed;
  width: 100%;
  height: 60px;
  background-color: rgb(252, 251, 254);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 25rpx;
}
.mainTitle{
  height: 350px;
  width: 700rpx;
  /* margin-left: 25rpx; */
  border-radius: 25rpx;
  background-color: white;
  /* margin-top: 10rpx; */
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.currentWeatherInformation{
  width: 300rpx;
  height: 150rpx;
  /* background-color: violet; */
  border-radius: 10px;
  margin-bottom: 15px;
  margin-left: 10px;
}
.temp{
  display: block;
  font-size: 120rpx;
  text-align: left;
  line-height: 50px;
}
.weather{
  font-size: 35rpx;
  text-align: left;
  line-height: 25px;
  padding-left: 3px;
  color: rgb(112, 111, 111);
}

.daysWeather{
  width: 750rpx;
  height: 88rpx;
  /* background-color: burlywood; */
  display: flex;
  justify-content: space-around;
  padding-bottom: 10px;
}

.daysWeather view{
  width: 200rpx;
  height: 100rpx;
  /* margin-top: 10px; */
  border: 1px solid aliceblue;
  background-color: white;
  border-radius: 15px;
}
.daysWeather text{
  display: block;
  font-size: 25rpx;
  text-align: center;
  padding-top: 6rpx;
  color: #ccc;
}

.Percentage{
    display: flex;
    width: 750rpx;
    height: 330rpx;
    /* background-color: violet; */
    justify-content: space-around;
}
.Percentage view{
  width: 330rpx;
  height: 330rpx;
  background-color: white;
  border-radius: 15px;
}
.tipsBox{
  display: flex;
  justify-content: space-around;
}
.tips{
  width: 700rpx;
  height: 100rpx;
  background-color: white;
  border-radius: 10px;
  /* margin-top: 20rpx; */
}
