page{
  /* background-color: rgb(153, 182, 211); */
  background-image: linear-gradient( rgb(135, 191, 233),rgb(95, 156, 216) 60%);
  width: 100%;
  height: 100%;
}
.padding{
  width: 100%;
  height: 20rpx;
}
.first{
  width: 700rpx;
  height:700rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-radius: 25px;
}
.second{
  border-radius: 17px;
  width: 400rpx;
  height: 150rpx;
  /* background-color: rgb(73, 77, 206); */
  display: flex;
  align-items: center;
  justify-content: space-around;

}
.root{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 750rpx;
  height: 100%;
  /* background-color: cornsilk; */
}
.image{
  display: flex;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  background-color: rgb(243, 242, 244);
  align-items: center;
  border-radius: 50%;
}
.image image{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}
.homeText{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 600rpx;
  height: 190rpx;
  border-radius: 10px;
  background-color:rgb(52, 101, 175);
  color: #ccc;
}
.textTitle{
  color: rgb(238, 228, 228);
  font-size: 35rpx;
}
.text{
  font-size: 28rpx;
}
.button{
  width: 320rpx;
  height: 130rpx;
  /* background-color: white; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
}
.button button{
  width: 270rpx;
  height: 90rpx;
  border-radius: 10px;
  background-color: rgb(52, 101, 175);
  font-size: 35rpx;
  color: white;
}






