/* pages/show-map/show-map.wxss */
.xyw{
  width: 100%;
  height: 100px;
  background-color: blue;
  position: relative;
  top: 250px;
}
.navi{
  position: fixed;
  width: 100%;
  height: 60px;
  background-color: rgb(241, 239, 245);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 25rpx;
}
.util{
  width: 100%;
  height: 60px;
  background-color: black;
}
.show-map-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  background: #F8F8F7;
}
.map-container {
  padding:10px 0 0;
  margin-top: 10px;
  background: #FFF;
  width: 100%;
  position: relative;
}
.map-content {
  /* display:none; */
  background: #FFF;
  position: absolute;
  z-index: 1;
  width: 100%;
  opacity: 0;
}
.map-content-show {
  height: auto;
  /* display: block; */
  z-index: 2;
  opacity: 1;
  transition: 0.3s;
}
.map-padding {
  padding-bottom: 20px;
}
.map {
  width:100%;
  height:235px;
}
.indoor-map {
	width: 100%;
	height: 400px;
}
.feature-content {
  height: 56px;
  display: flex;
  justify-content: space-between;
  line-height: 56px;
}
.feature-content-border {
border-bottom: 0.5px solid rgba(0,0,0,0.1);
}
